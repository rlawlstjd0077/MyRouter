<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<fx:root xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" stylesheets="@../main.css"
         prefHeight="400.0" prefWidth="600.0" type="BorderPane">
    <center>
        <VBox alignment="CENTER">
            <padding>
                <Insets left="10" right="10" top="10" bottom="50"/>
            </padding>
            <TableView prefWidth="100" prefHeight="240">
                <columns>
                    <TableColumn text="Name"/>
                    <TableColumn text="IP"/>
                    <TableColumn text="External Port"/>
                    <TableColumn text="Internal Port"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
            <VBox>
                <padding>
                    <Insets left="120" top="30"/>
                </padding>
                <HBox alignment="CENTER_LEFT">
                    <Label text="IP   :   "/>
                    <JFXTextField prefWidth="30"/>
                    <Label text="." alignment="CENTER" prefWidth="12"/>
                    <JFXTextField prefWidth="30"/>
                    <Label text="." alignment="CENTER" prefWidth="12"/>
                    <JFXTextField prefWidth="30"/>
                    <Label text="." alignment="CENTER" prefWidth="12"/>
                    <JFXTextField prefWidth="30"/>
                </HBox>
                <HBox alignment="CENTER_LEFT">
                    <Label text="External Port   :   "/>
                    <JFXTextField prefWidth="96"/>
                    <VBox.margin>
                        <Insets top="20" bottom="20"/>
                    </VBox.margin>
                </HBox>
                <HBox alignment="CENTER_LEFT">
                    <Label text="Internal Port    :   "/>
                    <JFXTextField prefWidth="96"/>
                </HBox>
                <VBox.vgrow>
                    <Priority fx:constant="ALWAYS"/>
                </VBox.vgrow>
            </VBox>
        </VBox>
    </center>
    <bottom>
        <HBox alignment="CENTER">
            <padding>
                <Insets bottom="20"/>
            </padding>
            <JFXButton text="Save" styleClass="handle-button" prefWidth="80" fx:id="saveBtn"/>
            <Label prefWidth="20"/>
            <JFXButton text="Cancel" styleClass="handle-button" prefWidth="80" fx:id="cancelBtn"/>
        </HBox>
    </bottom>
</fx:root>
